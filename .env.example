# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/appdb

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars-long
# BETTER_AUTH_URL: Server-side auth URL (should match your deployment URL in production)
BETTER_AUTH_URL=http://localhost:3000
# NEXT_PUBLIC_BETTER_AUTH_URL: Client-side auth URL (must be accessible from browser)
# In production, this should be your public domain (e.g., https://yourapp.com)
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Passkey Configuration (required in production)
# This should match your production domain (e.g., yourapp.com)
PASSKEY_RP_ID=localhost

# AI Configuration
# Get your API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Node Environment
NODE_ENV=development
